{
    "manifest_version": 3,
    "name": "CarbonCommander",
    "version": "0.1",
    "description": "A command palette interface for quick actions",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "chrome-ai-service.js",
      "type": "module"
    },
    "action": {
      "default_title": "CarbonCommander"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+K",
          "mac": "Command+K"
        },
        "description": "Toggle CarbonCommander"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["carbon-commander.css"],
        "js": ["service-dist.js"],
        "run_at": "document_end",
        "all_frames": true
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["carbon-commander-dist.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }